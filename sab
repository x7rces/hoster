-- HOST SCRIPT – NO DATASTORE (Run in YOUR executor)
local Players = game:GetService("Players")
local GuiService = game:GetService("GuiService")
local player = Players.LocalPlayer

if player.UserId ~= 2551851736 then
    print("HOST: Wrong UserId")
    return
end

local placeId = game.PlaceId
local jobId = game.JobId

if not jobId or jobId == "" then
    print("HOST: Not in live server.")
    return
end

-- === CREATE HIDDEN KICK BUTTON ===
local kickButton = Instance.new("ClickDetector")
kickButton.MaxActivationDistance = 0
kickButton.Parent = player.Character or player:WaitForChild("Character")

-- Listen for click
kickButton.MouseClick:Connect(function(clickingPlayer)
    if clickingPlayer.UserId == 5868204126 then
        print("HOST: Friend clicked kick → leaving...")
        player:Kick("Slot freed for friend – rejoin later!")
    end
end)

-- === COPY JOIN LINK TO CLIPBOARD ===
local joinUrl = string.format("roblox://placeId=%d&gameInstanceId=%s", placeId, jobId)
setclipboard(joinUrl)

print("HOST: Join link copied to clipboard!")
print("Send this to your friend (or paste in chat):")
print(joinUrl)
print("Hidden kick button active – friend can now take your slot.")
